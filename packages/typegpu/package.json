{
  "name": "typegpu",
  "private": true,
  "version": "0.0.0-alpha.4",
  "description": "A thin layer between JS and WebGPU/WGSL that improves development experience and allows for faster iteration.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "module": "./dist/*.js",
      "import": "./dist/*.js",
      "default": "./dist/*.cjs"
    },
    "./data": {
      "types": "./dist/data/index.d.ts",
      "module": "./dist/data/index.js",
      "import": "./dist/data/index.js",
      "default": "./dist/data/index.cjs"
    },
    "./macro": {
      "types": "./dist/macro/index.d.ts",
      "module": "./dist/macro/index.js",
      "import": "./dist/macro/index.js",
      "default": "./dist/macro/index.cjs"
    },
    "./web": {
      "types": "./dist/web/index.d.ts",
      "module": "./dist/web/index.js",
      "import": "./dist/web/index.js",
      "default": "./dist/web/index.cjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test:types": "pnpm tsc --p ./tsconfig.json --noEmit && pnpm tsc --p ./tsconfig.test.json --noEmit",
    "publish": "echo \"Use pnpm prepare-package instead!\" && exit 1",
    "prepare-package": "tsx scripts/preparePackage.ts"
  },
  "engines": {
    "node": ">=12.20.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/software-mansion/typegpu.git"
  },
  "keywords": [
    "webgpu",
    "wgpu",
    "wgsl",
    "typescript",
    "compute",
    "shader",
    "shaders",
    "gpgpu"
  ],
  "bugs": {
    "url": "https://github.com/software-mansion/typegpu/issues"
  },
  "homepage": "https://docs.swmansion.com/typegpu",
  "devDependencies": {
    "@typegpu/wgsl-parser": "workspace:*",
    "@webgpu/types": "^0.1.43",
    "remeda": "^2.3.0",
    "tsup": "^8.0.2",
    "tsx": "^4.16.2",
    "typed-binary": "^4.0.0",
    "typegpu": "workspace:*",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.8+sha256.691fe176eea9a8a80df20e4976f3dfb44a04841ceb885638fe2a26174f81e65e",
  "peerDependencies": {
    "typed-binary": "^4.0.1"
  }
}
