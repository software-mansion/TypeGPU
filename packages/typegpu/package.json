{
  "name": "typegpu",
  "private": true,
  "version": "0.4.2-alpha.1",
  "description": "A thin layer between JS and WebGPU/WGSL that improves development experience and allows for faster iteration.",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./data": "./src/data/index.ts",
    "./std": "./src/std/index.ts"
  },
  "publishConfig": {
    "directory": "dist",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "types": "./dist/index.d.ts",
        "module": "./dist/index.js",
        "import": "./dist/index.js",
        "default": "./dist/index.cjs"
      },
      "./data": {
        "types": "./dist/data/index.d.ts",
        "module": "./dist/data/index.js",
        "import": "./dist/data/index.js",
        "default": "./dist/data/index.cjs"
      },
      "./std": {
        "types": "./dist/std/index.d.ts",
        "module": "./dist/std/index.js",
        "import": "./dist/std/index.js",
        "default": "./dist/std/index.cjs"
      }
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test:types": "pnpm tsc --p ./tsconfig.test.json --noEmit",
    "prepublishOnly": "tgpu-dev-cli prepack"
  },
  "engines": {
    "node": ">=12.20.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/software-mansion/TypeGPU.git"
  },
  "keywords": [
    "webgpu",
    "wgpu",
    "wgsl",
    "typescript",
    "compute",
    "shader",
    "shaders",
    "gpgpu"
  ],
  "bugs": {
    "url": "https://github.com/software-mansion/TypeGPU/issues"
  },
  "homepage": "https://typegpu.com",
  "devDependencies": {
    "@typegpu/tgpu-dev-cli": "workspace:*",
    "@types/node": "^20.11.13",
    "@webgpu/types": "^0.1.54",
    "jiti": "^2.4.2",
    "unplugin-typegpu": "workspace:*",
    "tgpu-wgsl-parser": "workspace:*",
    "tsup": "^8.0.2",
    "typescript": "^5.7.3",
    "wgpu-matrix": "^3.3.0"
  },
  "packageManager": "pnpm@8.15.8+sha256.691fe176eea9a8a80df20e4976f3dfb44a04841ceb885638fe2a26174f81e65e",
  "dependencies": {
    "tinyest": "workspace:~0.1.0-alpha.2",
    "typed-binary": "^4.3.1"
  }
}
