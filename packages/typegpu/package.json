{
  "name": "typegpu",
  "private": true,
  "version": "0.8.1",
  "description": "A thin layer between JS and WebGPU/WGSL that improves development experience and allows for faster iteration.",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": "./src/index.ts",
    "./data": "./src/data/index.ts",
    "./std": "./src/std/index.ts",
    "./common": "./src/common/index.ts"
  },
  "publishConfig": {
    "directory": "dist",
    "linkDirectory": false,
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      "./package.json": "./dist/package.json",
      ".": {
        "types": "./dist/index.d.ts",
        "module": "./dist/index.js",
        "import": "./dist/index.js",
        "default": "./dist/index.cjs"
      },
      "./data": {
        "types": "./dist/data/index.d.ts",
        "module": "./dist/data/index.js",
        "import": "./dist/data/index.js",
        "default": "./dist/data/index.cjs"
      },
      "./std": {
        "types": "./dist/std/index.d.ts",
        "module": "./dist/std/index.js",
        "import": "./dist/std/index.js",
        "default": "./dist/std/index.cjs"
      },
      "./common": {
        "types": "./dist/common/index.d.ts",
        "module": "./dist/common/index.js",
        "import": "./dist/common/index.js",
        "default": "./dist/common/index.cjs"
      }
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test:types": "pnpm tsc --p ./tsconfig.test.json --noEmit",
    "prepublishOnly": "tgpu-dev-cli prepack"
  },
  "engines": {
    "node": ">=12.20.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/software-mansion/TypeGPU.git"
  },
  "keywords": [
    "webgpu",
    "wgpu",
    "wgsl",
    "typescript",
    "compute",
    "shader",
    "shaders",
    "gpgpu"
  ],
  "bugs": {
    "url": "https://github.com/software-mansion/TypeGPU/issues"
  },
  "homepage": "https://typegpu.com",
  "devDependencies": {
    "@ark/attest": "^0.49.0",
    "@typegpu/tgpu-dev-cli": "workspace:*",
    "@webgpu/types": "catalog:types",
    "arktype": "catalog:",
    "jiti": "catalog:build",
    "jsdom": "^27.0.0",
    "tsup": "catalog:build",
    "typescript": "catalog:types",
    "unplugin-typegpu": "workspace:*",
    "wgpu-matrix": "catalog:example"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
  "dependencies": {
    "tinyest": "workspace:~0.1.2",
    "typed-binary": "^4.3.1"
  }
}
