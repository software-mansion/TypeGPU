{
  "compilerOptions": {
    // important stuff
    "outDir": "${configDir}/dist",
    "declaration": true,
    "declarationMap": true,

    // basics
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "${configDir}/node_modules/@types",
      "${configDir}/node_modules/@webgpu/types"
    ]
  },
  "exclude": ["${configDir}/dist"]
}
