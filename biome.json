{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "**/dist/*",
      "**/coverage/*",
      "**/*.d.ts",
      "packages/tgpu-wgsl-parser/src/grammar.ts",
      "**/*.astro",
      "packages/**/tsup.config.bundled_*.mjs"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "useImportExtensions": "error"
      }
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "quoteStyle": "single"
    }
  },
  "css": {
    "formatter": {
      "indentStyle": "space",
      "quoteStyle": "single"
    }
  }
}
