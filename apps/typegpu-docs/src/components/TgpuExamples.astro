---
import { Image } from "astro:assets";
import CausticsGif from "../assets/hero/caustics_bg.gif";
import HoverExampleIsland from "./HoverExampleIsland";

const galleryItems = [
	{
		asset: CausticsGif,
		exampleKey: "rendering--caustics",
	},
	{
		asset: CausticsGif,
		exampleKey: "rendering--cubemap-reflection",
	},
	{
		asset: CausticsGif,
		exampleKey: "simple--vaporrave",
	},
	{
		asset: CausticsGif,
		exampleKey: "rendering--ray-marching",
	},
	{
		asset: CausticsGif,
		exampleKey: "rendering--3d-fish",
	},
	{
		asset: CausticsGif,
		exampleKey: "rendering--perlin-noise",
	},
];
---

{/* Interactive gallery */}
<div class="gap-6 grid sm:grid-cols-2 xl:grid-cols-3">
	{galleryItems.map((item) => (
		<div
			class="group relative bg-gradient-to-br from-tameplum-10 via-white shadow-sm hover:shadow-xl border border-accent-200 aspect-square overflow-hidden transition to-accent-20"
		>
			<Image
				src={item.asset}
				alt="TypeGPU Example"
				class="w-full h-full object-contain group-hover:scale-105 transition duration-300 ease-out"
			/>

			<div class="absolute inset-0 flex justify-center items-center opacity-0 group-hover:opacity-100 transition duration-300 ease-out pointer-events-none">
				<div class="bg-slate-950/80 backdrop-blur w-4/5 h-4/5 pointer-events-auto">
					<HoverExampleIsland client:visible exampleKey={item.exampleKey} />
				</div>
			</div>
		</div>
	))}
</div>